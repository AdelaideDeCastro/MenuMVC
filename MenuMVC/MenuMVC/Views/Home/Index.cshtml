@{
    ViewBag.Title = "Home Page";
}

<header class="startMenu">
    <h1 class="title">Weekly Menu</h1>
</header>
<div id="ourmenu">
    <div id="tableRow">
        <section id="menu" class="allMenu">
                <h2>Your <strong>Dinner Choices</strong> from Monday to Friday</h2>
                <ul id="workDay">
                    <li>Salsicce e lenticchie</li>
                    <li>Pesce e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Pollo e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Polpette e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Frittata e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Straccetti e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Bistecca e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Involtini di verza e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                </ul>
        </section>
        <section id="fortune" class="allMenu">
                <h2>Prey the goddess Fortuna</h2>
                <p>Choise your Weekly Menu to be <strong>Happy!!!</strong></p>
                <img src="~/image/piatto.png" id="button" />
                <div id="showMenu">
                    <table id="result">
                        <tr>
                            <th>Monday:</th>
                            <td id="monday"></td>
                        </tr>
                        <tr>
                            <th>Tuesday:</th>
                            <td id="tuesday"></td>
                        </tr>
                        <tr>
                            <th>Wednesday:</th>
                            <td id="wednesday"></td>
                        </tr>
                        <tr>
                            <th>Thursday:</th>
                            <td id="thursday"></td>
                        </tr>
                        <tr>
                            <th>Friday:</th>
                            <td id="friday"></td>
                        </tr>
                        <tr>
                            <th>Saturday:</th>
                            <td id="saturday"></td>
                        </tr>
                        <tr>
                            <th>Sunday</th>
                            <td id="sunday"></td>
                        </tr>
                    </table>
                </div>
                <img src="~/image/uova.jpg" id="newChoise" />
        </section>
        <section id="somethingSpecial" class="allMenu">
                <h2>Choose your special weekend dishes</h2>
                <form id="primo" class="choiceWeekEnd">
                    <fieldset class="pasta_riso" id="lunch">
                        <legend class="special">Special Lunch</legend>
                        
                            <input type="checkbox" name="lunch" value="Carbonara" class="food" /><label for="checkCarbonara" class="pippo">Carbonara</label><br />
                        
                            <input type="checkbox" name="lunch" value="Amatricina" class="food" /><label for="checkAmatriciana" class="pippo">Amatricina</label><br />
                        
                            <input type="checkbox" name="lunch" value="Gnocchi" class="food" /><label for="checkGnocchi" class="pippo">Gnocchi</label><br />
                        
                            <input type="checkbox" name="lunch" value="Fettuccine" class="food" /><label for="checkFettucine" class="pippo">Fettuccine</label><br />
                        
                            <input type="checkbox" name="lunch" value="Rissotto zafferano" class="food" /><label for="checkRisottoZ" class="pippo">Rissotto zafferano</label><br />
                        
                            <input type="checkbox" name="lunch" value="Risotto pancetta e funghi" class="food" /><label for="checkRisottoPF" class="pippo">Risotto pancetta e funghi</label><br />
                        
                            <input type="checkbox" name="lunch" value="Risotto pancetta e asparagi" class="food" /><label for="checkRisottoPA" class="pippo">Risotto pancetta e asparagi</label><br />
                    </fieldset>
                </form>
                <form id="secondo" class="choiceWeekEnd">
                    <fieldset class="pasta_riso" id="dinner">
                        <legend class="special">Special Dinner</legend>  
                            <input type="checkbox" name="dinner" value="Pulled Pork" class="food" /><label for="checkPulledPork" class="pippo">Pulled Pork</label><br />
                            <input type="checkbox" name="dinner" value="Pizza" class="food" /><label for="checkPizza" class="pippo">Pizza</label><br />
                            <input type="checkbox" name="dinner" value="Kebab" class="food" /><label for="checkKebab" class="pippo">Kebab</label><br />
                            <input type="checkbox" name="dinner" value="Hamburger" class="food" /><label for="checkHamburger" class="pippo">Hamburger</label><br />                      
                            <input type="checkbox" name="dinner" value="Hot Dog" class="food" /><label for="checkHotDog" class="pippo">Hot Dog</label><br />
                    </fieldset>
                </form>
        </section>
    </div>
</div>
<footer class="myWork">
    <p class="title job">It is my first work...</p>
</footer>
<div id="alertLunch" class="dialogPopup">
    <p class="alertdialog"><strong>Sorry!</strong><br/>
    You can select only two lunch dishes.</p>
</div>
<div id="alertDinner" class="dialogPopup">
    <p class="alertdialog"><strong>Sorry!</strong><br />
    You can select only two dinner dishes.</p>
</div>
<div id="alertQuantity" class="dialogPopup">
    <p class="alertdialog">You can select just four special dishes.</p>
</div>

