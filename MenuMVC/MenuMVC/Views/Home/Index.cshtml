@{
    ViewBag.Title = "Home Page";
}

<header class="startMenu">
    <h1 class="title">Weekly Menu</h1>
</header>
<div id="ourmenu">
    <div id="tableRow">
        <section id="menu" class="allMenu">
                <h2>Your <strong>Dinner Choices</strong> from Monday to Friday</h2>
                <ul id="workDay">
                    <li>Salsicce e lenticchie</li>
                    <li>Pesce e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Pollo e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Polpette e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Frittata e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Straccetti e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Bistecca e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                    <li>Involtini di verza e fagiolini/peperoni/patare/funghi/verza/cappuccio</li>
                </ul>
        </section>
        <section id="fortune" class="allMenu">
                <h2>Prey the goddess Fortuna</h2>
                <p>Choise your Weekly Menu to be <strong>Happy!!!</strong></p>
                <img src="~/image/piatto.png" id="button" />
                <div id="showMenu">
                    <table id="result">
                        <tr>
                            <th>Monday:</th>
                            <td id="monday"></td>
                        </tr>
                        <tr>
                            <th>Tuesday:</th>
                            <td id="tuesday"></td>
                        </tr>
                        <tr>
                            <th>Wednesday:</th>
                            <td id="wednesday"></td>
                        </tr>
                        <tr>
                            <th>Thursday:</th>
                            <td id="thursday"></td>
                        </tr>
                        <tr>
                            <th>Friday:</th>
                            <td id="friday"></td>
                        </tr>
                        <tr>
                            <th>Saturday:</th>
                            <td id="saturday"></td>
                        </tr>
                        <tr>
                            <th>Sunday</th>
                            <td id="sunday"></td>
                        </tr>
                    </table>
                </div>
                <img src="~/image/uova.jpg" id="newChoise" />
        </section>
        <section id="somethingSpecial" class="allMenu">
                <h2>Choose your special weekend dishes</h2>
            <div class="alertMenu">
                <p><strong>Sorry</strong>, you can check only two meals.</p>
            </div>
            <div class="alertQuantity">
                <p>Select you can check only two meals.</p>
            </div>
                <form id="primo" class="choiceWeekEnd">
                    <fieldset class="pasta_riso" id="lunch">
                        <legend class="special">Special Lunch</legend>
                        <label for="checkCarbonara">
                            <input type="checkbox" name="lunch" value="Carbonara" class="food" />Carbonara<br />
                        </label><br />
                        <label for="checkAmatriciana">
                            <input type="checkbox" name="lunch" value="Amatricina" class="food" />Amatricina<br />
                        </label><br />
                        <label for="checkGnocchi">
                            <input type="checkbox" name="lunch" value="Gnocchi" class="food" />Gnocchi<br />
                        </label><br />
                        <label for="checkFettucine">
                            <input type="checkbox" name="lunch" value="Fettuccine" class="food" />Fettuccine<br>
                        </label><br />
                        <label for="checkRisottoZ">
                            <input type="checkbox" name="lunch" value="Rissotto zafferano" class="food" />Rissotto zafferano<br />
                        </label><br />
                        <label for="checkRisottoPF">
                            <input type="checkbox" name="lunch" value="Risotto pancetta e funghi" class="food" />Risotto pancetta e funghi<br />
                        </label><br />
                        <label for="checkRisottoPA">
                            <input type="checkbox" name="lunch" value="Risotto pancetta e asparagi" class="food" />Risotto pancetta e asparagi<br />
                        </label><br />
                    </fieldset>
                </form>
                <form id="secondo" class="choiceWeekEnd">
                    <fieldset class="pasta_riso" id="dinner">
                        <legend class="special">Special Dinner</legend>
                        <label for="checkPulledPork"><br />
                            <input type="checkbox" name="dinner" value="Pulled Pork" class="food dinner" />Pulled Pork
                        </label><br />
                        <label for="checkPizza">
                            <input type="checkbox" name="dinner" value="Pizza" class="food" />Pizza
                        </label><br />
                        <label for="checkKebab">
                            <input type="checkbox" name="dinner" value="Kebab" class="food" />Kebab
                        </label><br />
                        <label for="checkHamburger">
                            <input type="checkbox" name="dinner" value="Hamburger" class="food" />Hamburger
                        </label><br />
                        <label for="checkHotDog">
                            <input type="checkbox" name="dinner" value="Hot Dog" class="food" />Hot Dog
                        </label><br />
                    </fieldset>
                </form>
        </section>
    </div>
</div>
<footer class="myWork">
    <p class="title job">It is my first work...</p>
</footer>
